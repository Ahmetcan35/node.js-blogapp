<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    
<%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <form   method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="roleid" value="<%= role.id %>">
                    <div class="row mb-3">
                        <label for="rolename" class="col-sm-2 col-form-label">Rol İsmi</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="rolename" name="rolename" value="<%= role.rolename %>">
                        </div>
                        
                    </div>
                    
                    <div class="row mb-3"></div>
                        <div class="col-sm-8 offset-sm-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                        
                    </div>
                
                </form>
    
                <table class="table table-bordered table-striped mt-3">
                    <thead>
                        <tr>
                          <th scope="col" style="width: 50px;">Id</th>
                          <th scope="col" style="width: 150px; ">Username</th>
                          <th scope="col">Email</th>
                          <th scope="col" style="width: 200px; "></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.fullname %></td>
                                <td><%= user.email%></td>
                                <td><a class="btn btn-sm btn-primary" href="/admin/users/<%= user.id %>">Edit</a>

                                    <form style="display: inline-block; " action="/admin/roles/remove" method="post">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <input type="hidden" name="roleid" value="<%= role.id %>">
                                        <input type="hidden" name="userid" value="<%= user.id %>">
                                        <button class="btn btn-sm btn-danger" type="submit">Rolü  çıkar</button>
                                    </form>
                                </td>
                                
                            </tr>
                        <% }) %>
                    
                      </tbody>
                </table>
            </div>
        </div>
        
    </div>  



</body>
</html>