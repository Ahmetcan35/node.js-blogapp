<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    
    <%- include('../partials/nav') %>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <% if (action != "undefined" && action=="edit") { %>
                 <div class="alert alert-success"><%= blogid %> id numaralı blog güncellendi.</div>
                <% } %>
                <% if (action != "undefined" && action=="create") { %>
                    <div class="alert alert-primary">Blog eklendi.</div>
                <% } %>
                <% if (action != "undefined" && action=="delete") { %>
                    <div class="alert alert-danger">
                        <%= blogid %> id numaralı blog silindi.</div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                          <th scope="col" style="width: 50px;">Id</th>
                          <th scope="col" style="width: 150px; ">Resim</th>
                          <th scope="col">Başlık</th>
                          <th scope="col">Kategori</th>
                          <th scope="col" style="width: 130px; "></th>
                        </tr>
                      </thead>
                      <tbody>
                        <% blogs.forEach(blog => { %>
                            <tr>
                                <td><%= blog.dataValues.id %></td>
                                <td><img src="/static/images/<%= blog.dataValues.resim %>" alt="" class="img-fluid"></td>
                                <td><%= blog.dataValues.blogtitle %></td>
                                <td>
                                    <% blog.categories.forEach(category => { %>
                                        <p><%= category.categoryname  %></p>
                                    <% }) %></td>
                                <td><a class="btn btn-sm btn-primary" href="/admin/blogs/<%= blog.dataValues.id %>">edit</a>
                                    <a class="btn btn-sm btn-danger" href="/admin/blog/delete/<%= blog.dataValues.id %>">delete</a>
                                </td>
                                
                            </tr>
                        <% }) %>
                    
                      </tbody>
                </table>
            </div>
        </div>
        
    </div>
   

</body>
</html>
